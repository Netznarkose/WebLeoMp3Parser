<span><%= link_to 'New Entry', new_entry_path %></span>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.term %></td>
        <td><%= entry.url %></td>
        <td><%= button_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Download', attachments_download_path(:entry_url => entry.url, :term => entry.term) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "Remove All", entries_remove_all_path, method: :get %>
<br>
