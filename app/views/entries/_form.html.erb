<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.label :language %><br>
    <%= f.select(:language, options_for_select(@languages_manual.map {|key, value| ["#{value}", "#{key}"]}, :selected => [@languages_manual[@last_entry_language], @last_entry_language]), prompt: true) %><br>
    <%= f.label :term %><br>
    <%= f.text_field :term %><br>
    <%= f.submit %> 
  </div>
<% end %>

